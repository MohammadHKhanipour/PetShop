@model PetShop.Domain.Data.Dtos.SignUpDto

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}



<div class="d-flex justify-content-center mt-3 mb-0">
    <p class="formtitle">Sign Up</p>
</div>
<form class="container loginborder" asp-action="SignUp" asp-controller="Accounts" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
            @if(!string.IsNullOrEmpty(ViewBag.Error)){
                <div class="alert alert-danger" role="alert">
                @ViewBag.Error
                </div>
            }
        <div class="row mb-3">
            <div class="col">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control" aria-label="First name" asp-for=FirstName/>
            </div>
            <div class="col">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control" aria-label="Last name" asp-for=LastName/>
            </div>
        </div>
        <label class="form-label">Phone Number</label>
        <input type="text"
               class="form-control"
               asp-for=PhoneNumber/>
               <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <label class="form-label mt-3">Email address</label>
        <input type="email"
               class="form-control"
               asp-for=Email/>
        <div id="emailHelp" class="form-text">
            We'll never share your email with anyone else.
        </div>
    </div>
    <div class="mb-1">
        <label class="form-label">Password</label>
        <input type="password"
               class="form-control"
               asp-for=Password/>
               <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Repeat Password</label>
        <input type="password"
               class="form-control"
               asp-for=ConfirmPassword/>
               <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="row mb-3">
        <div class="col">
            <label class="form-label">Age</label>
            <input type="number" class="form-control" asp-for=Age/>
        </div>
        <div class="col">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for=City/>
        </div>
        <div class="col">
            <label class="form-label">Street</label>
            <input type="text" class="form-control" asp-for=Street/>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-outline-success">Submit</button>
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-danger">Cancel</a>
    </div>
</form>

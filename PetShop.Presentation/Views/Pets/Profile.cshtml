@model PetShop.Domain.Data.Dtos.PetDto

@{
	ViewData["Title"] = "Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
	<div class="container-fluid container-fluid-100 d-flex">
		<div class="col-6 d-flex justify-content-center">
			<img class="mt-5 pet-image pet-card-border rounded-3"
				 src=@Model.ImageAddress
				 alt="" />
		</div>
		<div class="col-6 d-flex justify-content-start">
			<div class="d-flex flex-column">
				<div class="mt-5 d-flex">
					<div class="col align-items-start">
						<div class="row d-flex flex-row">
							<h3 class="text-green">Name:</h3>
							<h3 class="">@Model.Name</h3>
						</div>
						<div class="row d-flex flex-row mt-3">
							<h3 class="text-green">Gender:</h3>
							<h3 class="">@Model.Gender</h3>
						</div>
						<div class="row d-flex flex-row mt-3">
							<h3 class="text-green">Age:</h3>
							<h3 class="">@Model.Age</h3>
						</div>
						<div class="row d-flex flex-row mt-3">
							@if (@Model.Price != "0")
							{
								var dollarPrice = "$" + Model.Price;
								<h3 class="text-green">Price:</h3>
								<h3 class="">@dollarPrice</h3>
							}
							else
							{
								<h3 class="text-green">For Adoption</h3>
							}
						</div>
					</div>
					<div class="col align-items-start ms-4">
						<div class="row d-flex flex-row">
							<h3 class="text-green">Breed:</h3>
							<h3 class="">@Model.Breed</h3>
						</div>
						<div class="row d-flex flex-row mt-3">
							<h3 class="text-green">Category:</h3>
							<h3 class="">@Model.Category</h3>
						</div>
						<div class="row d-flex flex-row mt-3">
							<h3 class="text-green">City:</h3>
							<h3 class="">@Model.City</h3>
						</div>
						<div class="row d-flex flex-row mt-3">
							<h3 class="text-green">Added on:</h3>
							<h3 class="">@Model.DateAdded.ToShortDateString()</h3>
						</div>
					</div>
				</div>
				@if (!string.IsNullOrEmpty(Model.Description))
				{
					<h3 class="text-green mt-3">Description:</h3>
					<p class="fs-4 fw-bold">@Model.Description</p>
				}
				<div class="mt-3 row align-items-start">
					<div class="col d-flex flex-row">
						<h3 class="text-green">Owner's Phone Number:</h3>
						<h3 class="ms-3">@ViewBag.UserPhone</h3>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>


@model IEnumerable<PetShop.Domain.Data.Dtos.PetDto>
@using PetShop.Domain.Data.Dtos
@using PetShop.Domain.Data.Enums


@{
	ViewData["Title"] = "ViewPets";
	Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Breed</th>
			<th scope="col">Gender</th>
			<th scope="col">Category</th>
			<th scope="col">City</th>
			<th scope="col">Price</th>
			<th scope="col">DateAdded</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		@{
			if (Model == null || !Model.Any())
			{
				<p>No pets Found</p>
			}
			else
			{
				int i = 1;
				foreach (var item in Model)
				{
					var dollarPrice = "$" + item.Price;
					<tr>
						<th scope="row">@i</th>
						<td>@item.Name</td>
						<td>@item.Breed</td>
						<td>@item.Gender</td>
						<td>@item.Category</td>
						<td>@item.City</td>
						<td>@dollarPrice</td>
						<td>@item.DateAdded.ToShortDateString()</td>
						<td><i class="bi bi-x-circle icon-red h4"></i></td>
					</tr>
					i++;
				}
			}
		}
	</tbody>
</table>

